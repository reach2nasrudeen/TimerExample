<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.nasrudeen.myapplication.MainActivity">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ViewFlipper
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/viewFlipperSpecialNews"
            android:addStatesFromChildren="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/txtspecialview"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Special Page"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:shadowColor="#77000000"
                android:shadowDx="7.0" android:shadowDy="7.0"
                android:shadowRadius="8.0" />
        </ViewFlipper>
    </RelativeLayout>
</RelativeLayout>
